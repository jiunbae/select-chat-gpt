{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./src/*"
      ],
      "@selectchatgpt/common": [
        "../packages/common/src/index.ts"
      ],
      "@selectchatgpt/common/*": [
        "../packages/common/src/*"
      ]
    },
    "baseUrl": "."
  }
}
