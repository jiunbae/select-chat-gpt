{
  "name": "select-chatgpt-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:ext": "pnpm --filter select-chatgpt dev",
    "build:ext": "pnpm --filter select-chatgpt build",
    "dev:server": "pnpm --filter select-chatgpt-server dev",
    "dev:web": "pnpm --filter select-chatgpt-web dev",
    "build": "pnpm -r run build",
    "install:all": "pnpm install",
    "docker:db": "docker compose -f docker-compose.dev.yml up -d",
    "docker:db:stop": "docker compose -f docker-compose.dev.yml down",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:build:registry": "docker build -t registry.jiun.dev/selectchatgpt-server:latest ./server && docker build -t registry.jiun.dev/selectchatgpt-web:latest -f web/Dockerfile .",
    "docker:push": "docker push registry.jiun.dev/selectchatgpt-server:latest && docker push registry.jiun.dev/selectchatgpt-web:latest",
    "docker:release": "pnpm docker:build:registry && pnpm docker:push",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
